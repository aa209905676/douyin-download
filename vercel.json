{
  "version": 2,
  "name": "douyin-downloader",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "app/api/video/info/route.ts": {
      "maxDuration": 30
    },
    "app/api/video/download/route.ts": {
      "maxDuration": 60
    }
  }
}
